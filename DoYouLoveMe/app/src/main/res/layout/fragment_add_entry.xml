<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#FFF3F3"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/ItemNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Title"
                android:textSize="18sp"
                android:textColor="#D81B60"
                android:fontFamily="sans-serif-light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ItemCaloriesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Content"
                android:textSize="16sp"
                android:textColor="#AD1457"
                android:fontFamily="sans-serif-light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ItemNameEditText" />

            <EditText
                android:id="@+id/ItemNameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter Title"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:backgroundTint="#E91E63"
                android:textColorHint="#E57373"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ItemNameLabel" />

            <EditText
                android:id="@+id/ItemCaloriesEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter Content"
                android:inputType="textShortMessage"
                android:minHeight="48dp"
                android:backgroundTint="#E91E63"
                android:textColorHint="#E57373"
                app:layout_constraintEnd_toEndOf="@+id/ItemNameEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ItemCaloriesLabel" />

            <Button
                android:id="@+id/RecordItemButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Save Card"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E91E63"
                android:fontFamily="sans-serif-light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ItemCaloriesEditText"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/scrollerCardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#FFF3F3"
        app:cardUseCompatPadding="true">

        <!-- Wanted to make it call often and fade quotes in and out -->
        <TextSwitcher
            android:id="@+id/textSwitcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Card Content"
            android:textColor="#AD1457"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            android:padding="16dp"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

</FrameLayout>
